{
  "extends": "airbnb-base",
  "parserOptions": {
		"exmaVersion": 6
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }
    ],
    "no-console": [
      "error", { 
        "allow": [
          "warn",
          "error",
          "log"
        ] 
      }
    ]
  }
}
